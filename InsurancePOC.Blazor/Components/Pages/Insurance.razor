@page "/insurance"
@using InsurancePOC.Shared.Dtos
@inject HttpClient Http

<PageTitle>Insurance Data</PageTitle>

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="display-5 fw-bold text-dark">
            <i class="bi bi-database-fill-gear text-primary"></i> Insurance Data
        </h1>
        <p class="text-muted mb-0">Comprehensive view of all clients and policies</p>
    </div>
</div>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading data...</p>
    </div>
}
else
{
    if (!string.IsNullOrEmpty(clientsError) || !string.IsNullOrEmpty(policiesError))
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Error loading data:</strong>
            @if (!string.IsNullOrEmpty(clientsError))
            {
                <div class="mt-2"><strong>Clients:</strong> @clientsError</div>
            }
            @if (!string.IsNullOrEmpty(policiesError))
            {
                <div class="mt-2"><strong>Policies:</strong> @policiesError</div>
            }
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Clients Section -->
    <div class="mb-5">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-primary text-white py-3">
                <h2 class="h4 mb-0">
                    <i class="bi bi-people-fill me-2"></i>Clients
                    @if (clients != null && clients.Any())
                    {
                        <span class="badge bg-light text-primary ms-2">@clients.Count</span>
                    }
                </h2>
            </div>
            <div class="card-body p-0">
                @if (clients == null || !clients.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">No clients found.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="px-4 py-3"><i class="bi bi-hash me-1"></i>ID</th>
                                    <th class="py-3"><i class="bi bi-person me-1"></i>First Name</th>
                                    <th class="py-3"><i class="bi bi-person me-1"></i>Last Name</th>
                                    <th class="py-3"><i class="bi bi-envelope me-1"></i>Email</th>
                                    <th class="py-3"><i class="bi bi-telephone me-1"></i>Phone</th>
                                    <th class="py-3"><i class="bi bi-calendar me-1"></i>Date of Birth</th>
                                    <th class="py-3"><i class="bi bi-clock me-1"></i>Created At</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var client in clients)
                                {
                                    <tr>
                                        <td class="px-4 py-3"><span class="badge bg-secondary">@client.Id</span></td>
                                        <td class="py-3 fw-semibold">@client.FirstName</td>
                                        <td class="py-3 fw-semibold">@client.LastName</td>
                                        <td class="py-3"><a href="mailto:@client.Email" class="text-decoration-none">@client.Email</a></td>
                                        <td class="py-3">@(client.Phone ?? "<span class='text-muted'>N/A</span>")</td>
                                        <td class="py-3">@client.DateOfBirth.ToShortDateString()</td>
                                        <td class="py-3 text-muted">@client.CreatedAt.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Policies Section -->
    <div class="mb-5">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-success text-white py-3">
                <h2 class="h4 mb-0">
                    <i class="bi bi-file-earmark-text-fill me-2"></i>Policies
                    @if (policies != null && policies.Any())
                    {
                        <span class="badge bg-light text-success ms-2">@policies.Count</span>
                    }
                </h2>
            </div>
            <div class="card-body p-0">
                @if (policies == null || !policies.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-3">No policies found.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th class="px-4 py-3"><i class="bi bi-hash me-1"></i>ID</th>
                                    <th class="py-3"><i class="bi bi-person-badge me-1"></i>Client ID</th>
                                    <th class="py-3"><i class="bi bi-upc me-1"></i>Policy Number</th>
                                    <th class="py-3"><i class="bi bi-tag me-1"></i>Type</th>
                                    <th class="py-3"><i class="bi bi-currency-dollar me-1"></i>Premium</th>
                                    <th class="py-3"><i class="bi bi-calendar-check me-1"></i>Start Date</th>
                                    <th class="py-3"><i class="bi bi-calendar-x me-1"></i>End Date</th>
                                    <th class="py-3"><i class="bi bi-toggle-on me-1"></i>Status</th>
                                    <th class="py-3"><i class="bi bi-clock me-1"></i>Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var policy in policies)
                                {
                                    <tr>
                                        <td class="px-4 py-3"><span class="badge bg-secondary">@policy.Id</span></td>
                                        <td class="py-3"><span class="badge bg-info">@policy.ClientId</span></td>
                                        <td class="py-3 fw-semibold">@policy.PolicyNumber</td>
                                        <td class="py-3"><span class="badge bg-primary">@policy.PolicyType</span></td>
                                        <td class="py-3 text-success fw-bold">$@policy.PremiumAmount.ToString("N2")</td>
                                        <td class="py-3">@policy.StartDate.ToShortDateString()</td>
                                        <td class="py-3">@policy.EndDate.ToShortDateString()</td>
                                        <td class="py-3">
                                            @if (policy.IsActive)
                                            {
                                                <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i>Inactive</span>
                                            }
                                        </td>
                                        <td class="py-3 text-muted">@policy.CreatedAt.ToShortDateString()</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
}

@code {
    private List<ClientDto>? clients;
    private List<PolicyDto>? policies;
    private bool isLoading = true;

    // Per-call error messages
    private string? clientsError;
    private string? policiesError;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await Task.WhenAll(
                LoadClients(),
                LoadPolicies()
            );
        }
        catch (Exception ex)
        {
            // This catch is for unexpected aggregate exceptions from Task.WhenAll
            clientsError ??= ex.Message;
            policiesError ??= ex.Message;
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadClients()
    {
        try
        {
            clients = await Http.GetFromJsonAsync<List<ClientDto>>("/api/client");
        }
        catch (Exception ex)
        {
            clientsError = ex.Message;
        }
    }

    private async Task LoadPolicies()
    {
        try
        {
            policies = await Http.GetFromJsonAsync<List<PolicyDto>>("/api/policy");
        }
        catch (Exception ex)
        {
            policiesError = ex.Message;
        }
    }
}
